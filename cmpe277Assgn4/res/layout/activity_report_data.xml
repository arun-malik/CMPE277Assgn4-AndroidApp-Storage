<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignLeft="@+id/txtDataSource"
    android:layout_below="@+id/txtDataSource"
    android:background="@drawable/back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReportData" >

    <TextView
        android:id="@+id/txtDataSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/dataSource"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/tglDataSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtDataSource"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:textOff="@string/sqlLite"
        android:textOn="sharedPreferences" />

    <ListView
        android:id="@+id/lstRecords"
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:layout_alignLeft="@+id/txtDataSource"
        android:layout_below="@+id/txtDataSource"
        android:layout_marginTop="27dp" >
    </ListView>

</RelativeLayout>